<div class="main_container">
  <div class="information">
    <h2>スケジュール一覧</h2>
    <%= render "shared/flash" %>
  </div>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>スケジュール更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.start_date.to_formatted_s(:date_jp) %></td>
          <td><%= post.end_date.to_formatted_s(:date_jp) %></td>
          <td><%= all_day?(post.all_day) %></td>
          <td><%= post.updated_at.to_s(:datetime_jp) %></td>
          <td><%= link_to_post_show("確認", post) %></td>
          <td><%= link_to_post_edit("編集", post) %></td>
          <td><%= link_to_post_destroy("削除", post) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <ul>
      <li><%= link_to_post_new("スケジュール新規登録") %></li>
    </ul>
  </div>
</div>
