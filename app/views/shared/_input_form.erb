<%= form_with model: @post, local: true, data: { turbo: false } do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>
    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day, "終日" %></th>
      <td>
        <%= f.check_box :all_day, {}, checked_value="true", unchecked_value="false" %>
        <p>終日の場合はチェックを入れます</p>
      </td>
    </tr>
    <tr>
      <th><%= f.label :memorandum, "スケジュールメモ" %></th>
      <td><%= f.text_area :memorandum %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit submit_value %></li>
      <li><%= link_to_posts("スケジュール一覧に戻る") %></li>
    </ul>
  </div>
<% end %>